<div>
  <h2>Change your password</h2><br>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

    <%= f.password_field :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="form-inputs">
      <div class="form-group row">
        <div class="col-md-3"><%= f.label :new_password, class: 'label' %></div>
        <div class="col-md-8"><%= f.password_field :password,
                    label: "New password",
                    required: true,
                    autofocus: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" }, class: 'form-control' %></div>  
      </div>
      <div class="form-group row">
        <div class="col-md-3"><%= f.label :confirm_password, class: 'label' %></div>
        <div class="col-md-8"><%= f.password_field :password_confirmation, label: "Confirm your new password", required: true, class: 'form-control' %></div>
      </div>
      
    </div>

    <div class="form-actions">
      <%= f.submit "Change my password", class: 'btn btn-success' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  
</div>
