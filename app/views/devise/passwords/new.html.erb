<h2>Forgot your password?</h2><br>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <div class="form-inputs">
    <div class="form-group row">
      <div class="col-md-1  "><%= f.label :email, class: 'label' %></div>
      <div class="col-md-8"><%= f.text_field :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }, class: 'form-control' %></div>
    </div>
    
  </div>

  <div class="form-actions">
    <%= f.submit "Send me reset password instructions", class: 'btn btn-success' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
