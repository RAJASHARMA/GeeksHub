<header>
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<div class="col-md-4">
			<a class="navbar" href="<%= root_path %>"><span class="geeks-hub-font">GeeksHub</span></a>
		</div>
	  	

	  	<div class="collapse navbar-collapse container-fluid col-md-8" id="navbarMenu">
		  	<ul class="navbar-nav ml-auto ">
			    <li class="nav-item">
			    	<a href="<%= new_article_path %>" class="nav-link">
			    		<i class="fa fa-pencil">
			    			Create Article
			    		</i>
			    	</a>
			      <%#= link_to 'Create Article', new_article_path, class: ' fa fa-pencil' %>
			    </li>
		      	<% if user_signed_in? %>
			        <li class="nav-item dropdown">
			          	<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user">
			          	<%= current_user.profile.name.nil? ? (current_user.profile.public_email.nil? ? current_user.email.split('@')[0] : current_user.profile.public_email.split('@')[0]) : current_user.profile.name %></i>
			          	</a>
			          	<div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
							<%= link_to 'Profile', profile_path(current_user.profile.id), class: 'dropdown-item' %>
			          		<div class="dropdown-divider"></div>
							<%= link_to 'My Articles', articles_user_articles_path, class: 'dropdown-item' %>
							<% if current_user.admin? || current_user.moderator? %>
								<%= link_to 'View All Articles', articles_article_list_path, class: 'dropdown-item' %>
								<% if current_user.admin? %>
									<%= link_to 'View All Users', profiles_path, class: 'dropdown-item' %>
								<% end %>
							<% end %>
			            	<%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
			          	</div>
			        </li>
		      	<% else %>
			        <li class="nav-item">
			          <a href="<%= new_user_session_path %>" class="nav-link">
			    		<i class="fa fa-user">
			    			Sign in
			    		</i>
			    	</a>
			        </li>
		      	<% end %>
		  	</ul>
		</div>
	</nav>
</header>