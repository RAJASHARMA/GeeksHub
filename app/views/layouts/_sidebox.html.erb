
<div class="col-md-12 sidebar padding2">
  <!-- END Search bar -->
  <div class="sidebar-box search-form-wrap bg-transparent left4">
    <%= form_tag articles_path, method: 'get', class: "search-form" do %> 
      <div class="form-group row ">
          <%= text_field_tag :search, params[:search], class: 'search col-md-11', placeholder: 'Type a keyword and hit enter' %> 
          <%= button_tag(type: 'submit', class: 'col-md-2 fa fa-search bg-transparent border-0 left17') do %><% end %>
      </div>
    <% end %>
  </div>
  <!-- END Search bar -->

  <!-- START Author Section -->
  <% if action_name == 'show' %>
    <% unless @article.nil? %>
      <% unless @author.profile.nil? %>
        <div class="sidebar-box top10">
          <div class="bio text-center">
            <% if @author.profile.image.present? %>
              <%= image_tag "/profiles/images/#{@author.profile.image.name}" %>
            <% else %>
              <%= image_tag(image_path('avatar.png')) %>
            <% end %>
            <div class="bio-body">
                <h2>Author</h2>
                <%= @author.profile.name.nil? ? (@author.profile.public_email.nil? ? @author.email.split('@')[0] : @author.profile.public_email.split('@')[0]) : @author.profile.name %>
                <p><%= link_to 'Read my bio', profile_path(@author.profile.id), class: "btn btn-primary btn-sm rounded" %></p>
                <!-- <p class="social">
                  <a href="#" class="p-2"><span class="fa fa-facebook"></span></a>
                  <a href="#" class="p-2"><span class="fa fa-twitter"></span></a>
                  <a href="#" class="p-2"><span class="fa fa-instagram"></span></a>
                  <a href="#" class="p-2"><span class="fa fa-youtube-play"></span></a>
                </p> -->
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
  <!-- END Author Section -->
  
  <!-- START Popular Aricle Section -->
  <div class="sidebar-box col-md-12 padding3">
    <h3 class="heading">Popular Posts</h3>
    <div class="post-entry-sidebar">
      <ul>
        <% @popular_articles.each do |article| %> 
          <li>
            <a href="<%=article_path(article)%>">
              <% if article.image.present? %>
                <%= image_tag "/articles/images/#{article.image.name}", height: '70', width: '100' %>
              <% else %>
                <%= image_tag(image_path('default_article.jpg'), height: '70', width: '100') %>
              <% end %>

              <div class="text pd-l-5">
                <h4><%= article.title %></h4>
                <div class="post-meta">
                  <span class="mr-2">
                    <%= article.user.profile.name.nil? ? (article.user.profile.public_email.nil? ? article.user.email.split('@')[0] : article.user.profile.public_email.split('@')[0]) : article.user.profile.name %>
                  </span>
                </div>
              </div>
            </a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <!-- END Popular Aricle Section -->

  <!-- START Tag Section -->
  <div class="sidebar-box padding3">
    <h3 class="heading">Tags</h3>
    <ul class="tags">
      <%= raw ActsAsTaggableOn::Tag.order('taggings_count DESC').limit(40).map { |t| link_to t, tag_path(t.name), :class => "tag"}.join(' ') %>
    </ul>
  </div>
  <!-- END Tag Section -->
</div>
