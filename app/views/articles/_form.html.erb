
<%= form_for(@article) do |f| %>
  

  <% if @article.errors.any? %>
    <div id="error_explanation" class="alert" style="text-align: center; color: red;">
      <h2><%= pluralize(@article.errors.count, "error") %> Prohibited this Article from being saved:</h2>

      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
      </ul>
    </div>
  <% end %>


  <div>
    <div class="form-group">
      <%= f.label :title, class: 'label', wrapper: false %>
      <%= f.text_field :title, class: 'form-control', wrapper: false %>
    </div>

    <div class="form-group">
      <%= f.label :tag_list, 'Tags ( separated By commas )', class: 'label', wrapper: false %>:
      <%= f.text_field :tag_list, class: 'form-control', wrapper: false %>
    </div>
    <div class="form-group">
      <%= f.label "Thumbnail Image", class: 'label', wrapper: false %>
      <%= f.file_field :image %>
    </div>
    
    <div class="form-group">
      <%= f.label :content, class: 'label', wrapper: false %>:
      <%= f.cktext_area :content, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.check_box :status, class: 'checkbox'%>&nbsp;Status
    </div>
    
  </div>

  <div class="form-group">
    <%= f.button :submit, class: 'btn btn-success'  %>
  </div>
<% end %>
