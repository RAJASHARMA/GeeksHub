
<%= form_for(@article) do |f| %>
  <div>
    <div class="form-group">
      <%= f.label :title, class: 'label', wrapper: false %>
      <%= f.text_field :title, class: 'form-control', wrapper: false %>
      <p class='error'><%= show_errors(@article, :title) %></p>
    </div>

    <div class="form-group">
      <%= f.label :tag_list, 'Tags ( separated By commas )', class: 'label', wrapper: false %>
      <%= f.text_field :tag_list, class: 'form-control', wrapper: false, value: @article.tag_list.join(',') %>
      <p class='error'><%= show_errors(@article, :tag_list) %></p>
    </div>
    
    <div class="form-group">
      <%= f.label "Thumbnail Image", class: 'label', wrapper: false %>
      <%= f.file_field :image, class: 'custom-files' %>
      <p class='error'><%= show_errors(@article, :image) %></p>
    </div>
    
    <div class="form-group">
      <%= f.label :content, class: 'label', wrapper: false %>
      <%= f.cktext_area :content, class: 'form-control' %>
      <p class='error'><%= show_errors(@article, :content) %></p>
    </div>
  </div>

  <div class="form-group">
    <%= f.button :submit, class: 'btn btn-success'  %>
  </div>
<% end %>
