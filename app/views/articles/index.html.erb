
<div class="col-md-12 col-lg-12 main-content">
    <div class="row">
        <%= render '/articles/shared/actions' %>
    </div>
    <div class="row">
      <% if @articles.empty? %>
        <div class="not-found">
          <span>No Articles Found</span>
        </div>
      <% else %>
        <% @articles.each do |article| %>
            <div class="col-md-6">
              <a href="<%= article_path(article.id) %>" class="blog-entry element-animate" data-animate-effect="fadeIn">
                <% if article.image.present? %>
                  <%= image_tag "/articles/images/#{article.image.name}", height: '236', width: '353' %>
                <% else %>
                  <%=image_tag(image_path('img_1.jpg')) %>
                <% end %>
                <div class="blog-content-body" style="height: 125px;">
                  <div class="post-meta">
                    <span class="author mr-2"><%=image_tag(image_path('avatar.png')) %> <%= article.user.email %></span>
                    <div class="wrap-text text-truncate"><h2><%= article.title %></h2>
                      <% if article.tag_list.present? %>
                      <ul class="tags">
                        <%= raw article.tag_list.map { |t| %>
                            <span class="tag"><%= t %></span>           <% }.join(' ') %>
                      </ul>
                        <!-- <span class="mr-2">Tags: <%= raw article.tag_list.join(' | ') %></span> --> 
                      <% end %>
                    </div>
                  </div>
                </div>
              </a>
            </div>
        <% end %>
      <% end %>
    </div>
    <div class="top10">
      <%= will_paginate @articles, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>
  </div>

                    